{
  "compilerOptions": {
    "outDir": "./dist",  // Specify the output directory for compiled JS files
    "rootDir": "./src",  // Specify the root directory for your source files
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"  // Include all files in the src folder
  ]
}
